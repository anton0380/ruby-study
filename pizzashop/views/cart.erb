<h2>Your cart</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Price</th>
      <th>Qty</th>
    </tr>
  </thead>
  <tbody>

    <% @items.each_with_index do |item, i| %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% end %>

  </tbody>
</table>